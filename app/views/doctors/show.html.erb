<h1> Dr. <%=@doctor.name %> </h1>

<h3> Appointments: </h3>
<ol> 
<% @appointments.each do |app| %>
    <li> <%= app.appointment_datetime.strftime("%B %d, %Y at %k:%M") %> </li>
    <% end %>
</ol>
<h3> Patients: </h3>
<ol> 
<% @patients.each do |patient| %>
    <li> <%=link_to patient.name, patient %> </li>
    <% end %>
</ol>